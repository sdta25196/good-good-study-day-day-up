{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir" : "./es",
    "allowJs": false,
    "rootDir" : "src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators" : true,
    "isolatedModules": true,
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ]
}
